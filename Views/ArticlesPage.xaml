<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xaml="http://schemas.mauimicromvvm.com/2022/dotnet/maui"
             xmlns:viewModels="clr-namespace:JL_CW_App.ViewModels"
             xmlns:models="clr-namespace:JL_CW_App.Models"
             xaml:MauiMicro.Autowire="True"
             x:Class="JL_CW_App.Views.ArticlesPage"
             x:DataType="viewModels:ArticleViewModel"
             Title="Articles">

    <StackLayout Spacing="30">
        <Label Text="Welcome to the budget app!"
               Padding="0, 20, 0, 0"
               HorizontalOptions="Center"
               FontSize="Large" />

        <ListView ItemsSource="{Binding Articles}">
            <ListView.ItemTemplate>
                <DataTemplate
                    x:DataType="models:NewsArticle">
                    <ViewCell>
                        <StackLayout Padding="10" Margin="10">
                            <Label Text="{Binding Title}" />
                            <Label Text="{Binding Description}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>